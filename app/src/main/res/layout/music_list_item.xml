<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/musiclist_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/musiclist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/musiclist_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/musiclist_title"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/musiclist_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/musiclist_singer"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/musiclist_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/musiclist_album"
            android:textSize="25dp"/>


    </LinearLayout>


</LinearLayout>